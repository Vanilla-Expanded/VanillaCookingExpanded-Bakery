<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="ResourceBase">
		<defName>VCE_SimpleConfection</defName>
		<label>simple confection</label>
		<description>A giant sweet cookie, lightly decorated. Quick to make, simple to enjoy.</description>
		<graphicData>
			<texPath>Things/Item/Meal/VCE_SimpleConfection</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<stackLimit>10</stackLimit>
		<socialPropernessMatters>true</socialPropernessMatters>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Beauty>0</Beauty>
			<MarketValue>20</MarketValue>
			<Nutrition>0.2</Nutrition>
			<Mass>0.44</Mass>
			<DeteriorationRate>10</DeteriorationRate>
		</statBases>
		<tickerType>Rare</tickerType>
		<thingCategories>
			<li>FoodMeals</li>
		</thingCategories>
		
		<ingestible>
			<chairSearchRadius>9</chairSearchRadius>
			<preferability>DesperateOnly</preferability>
			<foodType>Processed</foodType>
			<joy>0</joy>
			<drugCategory>Social</drugCategory>
			<maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
			<defaultNumToIngestAtOnce>1</defaultNumToIngestAtOnce>
			<ingestSound>Meal_Eat</ingestSound>
			<ingestEffect>EatVegetarian</ingestEffect>
			<outcomeDoers>
				<li Class="VanillaCookingExpandedBakery.IngestionOutcomeDoer_Confection">
					<mealType>Simple</mealType>
					
				</li>
			</outcomeDoers>
		</ingestible>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>4</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="CompProperties_Ingredients"/>
			<li Class="CompProperties_FoodPoisonable"/>
			<li Class="CompProperties_Drug">
				<listOrder>1000</listOrder>
				<teetotalerCanConsume>true</teetotalerCanConsume>
				<overdoseSeverityOffset>0.08~0.14</overdoseSeverityOffset>
			</li>
		</comps>
	</ThingDef>
