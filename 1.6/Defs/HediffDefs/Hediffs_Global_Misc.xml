<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>VCE_ConsumedConfection</defName>
		<label>consumed confection</label>
		<makesSickThought>false</makesSickThought>
		<description>This colonist has recently consumed a confection. Eating another one before 3 days will have no mood nullification effects.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(92,62,198)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>180000~180000</disappearsAfterTicks>
				<showRemainingTime>true</showRemainingTime>
			</li>
		</comps>
	</HediffDef>
</Defs>