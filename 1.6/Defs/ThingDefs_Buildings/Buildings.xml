<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BuildingBase">
		<defName>VCE_BakeryOven_Fueled</defName>
		<label>fueled bakery oven</label>
		<description>A wood-fueled oven designed for baking cookies, pastries, and cakes. Its steady heat ensures even cooking and sweet results, though it requires a constant supply of fuel.</description>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Things/Building/BakeryOven/FueledBakery</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(3,2)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<thingCategories>
			<li>BuildingsProduction</li>
		</thingCategories>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>140</costStuffCount>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>true</rotatable>
		<neverMultiSelect>true</neverMultiSelect>
		<uiIconScale>0.8</uiIconScale>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<Mass>150</Mass>
			<WorkToBuild>2200</WorkToBuild>
			<MaxHitPoints>450</MaxHitPoints>
			<Flammability>0</Flammability>
			<MarketValue>350</MarketValue>
		</statBases>
		<tickerType>Rare</tickerType>
		<size>(3,2)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<researchPrerequisites>
			<li>VCE_DecorativeBaking</li>
		</researchPrerequisites>
		 <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
		<building>
			<isMealSource>true</isMealSource>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<buildingTags>
				<li>Production</li>
			</buildingTags>
		</building>
		<inspectorTabs>
			<li>PipeSystem.ITab_Processor</li>
		</inspectorTabs>
		<comps>
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>160.0</fuelConsumptionRate>
				<fuelCapacity>50.0</fuelCapacity>
				<fuelFilter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</fuelFilter>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
				<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
				<canEjectFuel>true</canEjectFuel>
			</li>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>4</heatPerSecond>
			</li>
			<li Class="PipeSystem.CompProperties_AdvancedResourceProcessor">
				<notWorkingKey>VCE_BakeryOvenNotWorking</notWorkingKey>
				<processes>
					<li>VCE_BakeSimpleConfection</li>
					
				</processes>
				<progressBarOffset>(0,0,-0.75)</progressBarOffset>
				<hideSettings>true</hideSettings>
				
			</li>
		</comps>
		<minifiedDef>MinifiedThing</minifiedDef>
	</ThingDef>
</Defs>
